@model IEnumerable<SistemaLogistica.Domain.DTO.InOutDTO>

<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Produto</a>
</p>

<table class="table table-striped table-hover table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.inOrOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.client.person.name) Cliente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.inOrOut)
                </td>
                @if(@item.inOrOut == 1){
                    <td>
                        @Html.DisplayFor(modelItem => item.client.person.name)
                    </td>
                }
                else
                {
                    <td></td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                    <a class="btn btn-danger" href="#" onclick="deleteRegistro(@item.id, '@item.id', 'InOut')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

