@model IEnumerable<SistemaLogistica.Domain.DTO.ProductDTO>

<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Produto</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fornecedor.person.name) Fornecedor
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantityStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantityMinimun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if(item.quantityStock <= item.quantityMinimun)
            {
                
            <tr class="bg-danger">
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.category.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fornecedor.person.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantityStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantityMinimun)
                </td>
                    <td>
                        <figure>
                            <img src="~/Uploads/@item.image" style=" width: 64px;" />
                        </figure>
                    </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                    <a class="btn btn-danger" href="#" onclick="deleteRegistro(@item.id, '@item.name', 'Product')">Delete</a>
                    <a class="btn btn-info" asp-action="ImagePost" asp-route-id="@item.id">&uarr; IMG</a>
                </td>
            </tr>
                
            } else{
            <tr class="table-info">
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.category.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fornecedor.person.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantityStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantityMinimun)
                </td>
                <td>
                    <figure>
                        <img src="~/Uploads/@item.image" style=" width: 64px;"/>
                    </figure>
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                    <a class="btn btn-danger" href="#" onclick="deleteRegistro(@item.id, '@item.name', 'Product')">Delete</a>
                    <a class="btn btn-info" asp-action="ImagePost" asp-route-id="@item.id">&uarr; IMG</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>

