@model IEnumerable<SistemaLogistica.Domain.DTO.ClientDTO>

<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Cliente</a>
</p>

<table class="table table-striped table-hover table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person.cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person.country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person.uf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person.neighbourhood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person.street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person.number)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.person.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.person.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.person.cep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.person.country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.person.uf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.person.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.person.neighbourhood)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.person.street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.person.number)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                    <a class="btn btn-danger" href="#" onclick="deleteRegistro(@item.id, '@item.person.name', 'Client')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
